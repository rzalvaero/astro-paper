{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "Node16",
    "declaration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Node16",
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true
  },
  "include": ["./**/*.ts"]
}
